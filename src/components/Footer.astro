---
import { Image } from "astro:assets";
import vidiLogo from "../images/vidi-logo.png";
import instagram from "../images/social-media-logo/instagram-logo.svg";
import linkedin from "../images/social-media-logo/linkedin-logo.svg";
import xLogo from "../images/social-media-logo/x-logo.svg";
import threads from "../images/social-media-logo/threads-logo.svg";
import facebook from "../images/social-media-logo/facebook-logo.svg";
---

<footer
  class="h-[593px] bg-black text-white flex lg:flex-row flex-col justify-evenly items-center"
>
  <div class="flex lg:justify-evenly gap-x-8 items-center flex-grow-[2]">
    <ul class="list-style-none flex flex-col gap-4">
      <li class="uppercase font-semibold">Menu</li>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/">About Us</a>
      </li>
      <li>
        <a href="/">Projects</a>
      </li>
      <li>
        <a href="/">News</a>
      </li>
      <li>
        <a href="/">Contact Us</a>
      </li>
    </ul>
    <ul class="list-style-none flex flex-col gap-4">
      <li class="uppercase font-semibold">Socials</li>
      <li>
        <a href="/">Facebook</a>
      </li>
      <li>
        <a href="/">LinkedIn</a>
      </li>
      <li>
        <a href="/">Twitter</a>
      </li>
      <li>
        <a href="/">Instagram</a>
      </li>
      <li>
        <a href="/">Threads</a>
      </li>
    </ul>
  </div>

  <div class="flex flex-col gap-4 items-center justify-center flex-grow">
    <Image src={vidiLogo} alt="logo" />
    <div class="flex gap-x-4">
      <a href="/" class="hover:scale-110 transition-transform">
        <Image src={facebook} alt="facebook" class="w-7 h-7" />
      </a>
      <a href="/" class="hover:scale-110 transition-transform">
        <Image src={linkedin} alt="linkedin" class="w-7 h-7" />
      </a>
      <a href="/" class="hover:scale-110 transition-transform">
        <Image src={xLogo} alt="x-logo" class="w-7 h-7" />
      </a>
      <a href="/" class="hover:scale-110 transition-transform">
        <Image src={instagram} alt="instagram" class="w-7 h-7" />
      </a>
      <a href="/" class="hover:scale-110 transition-transform">
        <Image src={threads} alt="threads" class="w-7 h-7" />
      </a>
    </div>
  </div>
</footer>
